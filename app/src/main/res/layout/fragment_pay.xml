<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentBtmNavi.PayFragement">

    <View
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pay_title_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Pay"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:fontFamily="@font/santana_black"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toBottomOf="@+id/title_view"
        app:layout_constraintStart_toStartOf="parent"/>

    <FrameLayout
        android:layout_width="380dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/pay_title_text"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:layout_marginTop="12dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/pay_before_login"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스타벅스 카드를 등록해보세요."
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="매장과 사이렌 오더에서 쉽고 편리하게\n사용할 수 있고, 별도 적립할 수 있습니다."
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginTop="8dp"/>




        </androidx.appcompat.widget.LinearLayoutCompat>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>